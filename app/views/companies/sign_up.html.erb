<h1 class="page_title">Sign Up</h1>
<%= form_for( @company, html: { class: "form-horizontal" }) do |c| %>
  <% if @company.errors.any? %>
    <div id="errorExplanation" class="alert alert-danger">
      <h2>
        <%= pluralize(@company.errors.count, "error") %> prohibited
        this company from being saved:
      </h2>
      <ul>
        <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= c.label :name, "Company Name", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= c.text_field :name, :autofocus => true, :placeholder => "Company Name", :class => "form-control" %>
    </div>
  </div>

  <%= c.fields_for :users do |f| %>
    <%= f.hidden_field :company_admin, :value => true  %>
    <div class="form-group">
      <%= f.label :first_name, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, :placeholder => "First Name", :class => "form-control" %> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, :placeholder => "Last Name", :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, :placeholder => "email", :class => "form-control" %>
      </div>
    </div>    

    <div class="form-group">
      <%= f.label :password, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %> 
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, :placeholder => "Retype Password", :class => "form-control" %>
      </div>
    </div>

  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= c.submit "Sign up", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>