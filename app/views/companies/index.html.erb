<h1>Listing companies <%= link_to 'New Company', new_company_path, class: "btn btn-primary pull-right" %></h1>
<hr/>

<table  class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Allow email regex</th>
      <th>Url</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.address %></td>
        <td><%= company.allow_email_regex %></td>
        <td><%= company.url %></td>
        <td><%= link_to 'Show', company, class: "btn btn-sm" %>
          <%= link_to 'Edit', edit_company_path(company), class: "btn btn-sm" %>
          <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
        <tr> <%= paginate  @companies %> </tr>
  </tbody>
</table>
