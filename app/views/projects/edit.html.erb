<% content_for :title do %>
  Edit Project: <%= @project.name %>
<% end %>
<% content_for :sub_title do %>You can edit this project from here!<% end %>
<div class="row row-bg">
  <div class="col-md-12">
    <% if can? :update, @project %>
      <%= render :partial => "form" %>
    <% else %>
      <p>You don't have enough permission to edit this project.</p>
    <% end %>
  </div>
</div>